{
    "name": "augustash/ddev",
    "description": "AugustAsh ddev installer.",
    "type": "library",
    "require": {
        "php": ">=7"
    },
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.ddev/config.yaml": {
                    "mode": "replace",
                    "path": "config.yaml",
                    "overwrite": false
                },
                "[project-root]/scripts/ddev/ddev.php": "assets/ddev.php"
            }
        }
    },
    "autoload": {
      "classmap": [
        "scripts/ddev.php"
      ]
    },
    "scripts": {
      "post-install-cmd": "Augustash\\Ddev::postPackageInstall"
    }
}
